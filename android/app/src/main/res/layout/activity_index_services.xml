<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme01.appBackColor"
    tools:context=".ActivityIndexServices">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_gravity="center|center_vertical"
                android:text="@string/kTabBarNameServices"
                style="@style/kNavigationBarTextStyle" />

        </FrameLayout>

        <!-- 滚动视图 -->
        <ScrollView
            android:paddingBottom="48dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="24dp"
                android:orientation="vertical">

                <!-- 最间隔：28dp 行间隔：12dp -->

                <!-- 转账 -->
                <LinearLayout
                    android:id="@+id/layout_transfer_from_services"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_icon_transfer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_transfer"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textSize="16dp"
                        android:layout_weight="9"
                        android:textColor="@color/theme01.textColorMain"
                        android:text="@string/kServicesCellLabelTransfer"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="1"

                        android:foregroundGravity="right"
                        android:src="@drawable/ic_btn_right_arrow" />

                </LinearLayout>

                <!-- 投票 -->
                <LinearLayout
                    android:id="@+id/layout_voting_from_services"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_icon_voting"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_vote"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textSize="16dp"
                        android:layout_weight="9"
                        android:textColor="@color/theme01.textColorMain"
                        android:text="@string/kServicesCellLabelVoting"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="1"

                        android:foregroundGravity="right"
                        android:src="@drawable/ic_btn_right_arrow" />

                </LinearLayout>

                <!-- 扫一扫 -->
                <LinearLayout
                    android:id="@+id/layout_saoyisao_from_services"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_icon_qrscan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_scan"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textSize="16dp"
                        android:layout_weight="9"
                        android:textColor="@color/theme01.textColorMain"
                        android:text="@string/nameSaoyisao"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="1"

                        android:foregroundGravity="right"
                        android:src="@drawable/ic_btn_right_arrow" />

                </LinearLayout>

                <!-- 账号查询 -->
                <LinearLayout
                    android:id="@+id/layout_account_query_from_services"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_icon_account_search"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_query"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textSize="16dp"
                        android:layout_weight="9"
                        android:textColor="@color/theme01.textColorMain"
                        android:text="@string/kServicesCellLabelAccountSearch"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="1"

                        android:foregroundGravity="right"
                        android:src="@drawable/ic_btn_right_arrow" />

                </LinearLayout>

                <!-- 智能币 -->
                <LinearLayout
                    android:id="@+id/layout_smart_coin"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_icon_smart_coin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_asset_info"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textSize="16dp"
                        android:layout_weight="9"
                        android:textColor="@color/theme01.textColorMain"
                        android:text="@string/kServicesCellLabelSmartCoin"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="1"

                        android:foregroundGravity="right"
                        android:src="@drawable/ic_btn_right_arrow" />

                </LinearLayout>

                <!-- 分组：[场外交易(可选)]、[商家后台(可选)] -->
                <LinearLayout
                    android:id="@+id/layout_group_otc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:orientation="vertical">

                    <!-- 场外交易 -->
                    <LinearLayout
                        android:id="@+id/layout_otc_user"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_icon_otc_user"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_otc_user"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textSize="16dp"
                            android:layout_weight="9"
                            android:textColor="@color/theme01.textColorMain"
                            android:text="@string/kServicesCellLabelOtcUser"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_weight="1"

                            android:foregroundGravity="right"
                            android:src="@drawable/ic_btn_right_arrow" />
                    </LinearLayout>

                    <!-- 商家信息 -->
                    <LinearLayout
                        android:id="@+id/layout_otc_merchant"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_icon_otc_merchant"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_otc_merchant"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textSize="16dp"
                            android:layout_weight="9"
                            android:textColor="@color/theme01.textColorMain"
                            android:text="@string/kServicesCellLabelOtcMerchant"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_weight="1"

                            android:foregroundGravity="right"
                            android:src="@drawable/ic_btn_right_arrow" />
                    </LinearLayout>

                </LinearLayout>

                <!-- 分组：[充提(可选)]、高级功能、区块浏览器 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:orientation="vertical">

                    <!-- 充提 -->
                    <LinearLayout
                        android:id="@+id/layout_recharge_and_withdraw_of_service"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_icon_deposit_withdraw"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_depositwithdraw"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textSize="16dp"
                            android:layout_weight="9"
                            android:textColor="@color/theme01.textColorMain"
                            android:text="@string/kServicesCellLabelDepositWithdraw"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_weight="1"

                            android:foregroundGravity="right"
                            android:src="@drawable/ic_btn_right_arrow" />

                    </LinearLayout>

                    <!-- 高级功能 -->
                    <LinearLayout
                        android:id="@+id/layout_advanced_feature_of_service"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_icon_advfunction"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_advfunction"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textSize="16dp"
                            android:layout_weight="9"
                            android:textColor="@color/theme01.textColorMain"
                            android:text="@string/kServicesCellLabelAdvFunction"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_weight="1"
                            android:foregroundGravity="right"
                            android:src="@drawable/ic_btn_right_arrow" />

                    </LinearLayout>
                    
                    <!-- BTS区块浏览器 -->
                    <LinearLayout
                        android:id="@+id/layout_bts_explorer"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_icon_explorer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_explorer"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textSize="16dp"
                            android:layout_weight="9"
                            android:textColor="@color/theme01.textColorMain"
                            android:text="@string/kServicesCellLabelBtsExplorer"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_weight="1"
                            android:foregroundGravity="right"
                            android:src="@drawable/ic_btn_right_arrow" />

                    </LinearLayout>

                </LinearLayout>

                <!-- 小游戏 TODO：未完成 -->
                <LinearLayout
                    android:id="@+id/layout_game_of_service"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_icon_game"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/iconfeed"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textSize="16dp"
                        android:layout_weight="9"
                        android:textColor="@color/theme01.textColorMain"
                        android:text="@string/serviceMainPageGame"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="1"

                        android:foregroundGravity="right"
                        android:src="@drawable/ic_btn_right_arrow" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <include
            layout="@layout/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="463dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>